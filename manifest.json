{
  "manifest_version": 3,
  "name": "Materia Tab",
  "version": "0.1",
  "description": "A simple, clean new tab page featuring Material Design 3.",
  "permissions": ["storage", "search"],
  "host_permissions": [
    "https://www.google.com/*",
    "https://*.bing.com/*",
    "https://www.baidu.com/*",
    "https://duckduckgo.com/*",
    "https://yandex.com/*",
    "https://search.brave.com/*"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "16": "favicon/icon16.png",
    "48": "favicon/icon48.png",
    "128": "favicon/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "favicon/icon16.png",
      "48": "favicon/icon48.png",
      "128": "favicon/icon128.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: blob: https:;"
  },
  "incognito": "split",
  "offline_enabled": true
}
